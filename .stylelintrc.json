{
  "overrides": [
    {
      "files": ["**/*.{js,jsx,ts,tsx}"],
      "customSyntax": "@stylelint/postcss-css-in-js"
    }
  ],
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "ignoreFiles": ["**/node_modules/**", "**/dist/**"],
  "rules": {
    "order/properties-order": [
      [
        "position",
        "top",
        "right",
        "bottom",
        "left",
        "z-index",
        "display",
        "flex",
        "flex-grow",
        "flex-shrink",
        "flex-basis",
        "align-items",
        "justify-content",
        "gap",
        "float",
        "clear",
        "width",
        "min-width",
        "max-width",
        "height",
        "min-height",
        "max-height",
        "padding",
        "margin",
        "box-sizing",
        "font",
        "font-size",
        "font-weight",
        "line-height",
        "letter-spacing",
        "text-align",
        "white-space",
        "color",
        "background",
        "background-color",
        "background-image",
        "border",
        "border-radius",
        "overflow",
        "opacity",
        "transition",
        "animation",
        "cursor"
      ],
      {
        "unspecified": "bottomAlphabetical"
      }
    ]
  }
}
